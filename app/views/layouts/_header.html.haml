/ === Header ===
.header
  .navbar.navbar-default{role: "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path}
          =image_tag('logo1-default.png')
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown",  href: root_path}
              Home
          %li
            =link_to "Services offered", services_path, class: 'dropdown-toggle', "data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown"
          %li
            =link_to "Clients", clients_path
          %li
            =link_to "Our Team", team_path  
          %li
            =link_to "Contact Us", contact_path
          %li
            -# if user_signed_in?
              =#link_to 'Sign out', destroy_user_session_path, method: :delete
            -#else
              =#link_to('Login', new_user_session_path)

          %li.dropdown
            -# %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: opportunities_path}
            -# Opportunities
          
          %li.dropdown
            -#if user_signed_in?
              -#%a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: edit_user_path(current_user.id)}
                -#Profile
            -#else
              -#%a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: new_user_registration_path}
                -#Register
  
          / /input-group
      / /navbar-collapse
/ /header